<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ActivityXunJian">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            layout="@layout/layout_comm_activity_toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            />
        <ImageView
            android:id="@+id/order_list_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            />

        <ImageView
            android:visibility="gone"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/sousoua"
            android:id="@+id/order_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/xunjain_tab"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:clipToPadding="false"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        app:stl_defaultTabTextColor="@color/colorWhite"
        app:stl_defaultTabTextHorizontalPadding="14dp"
        app:stl_dividerThickness="0dp"
        app:stl_indicatorColor="#175490"
        app:stl_indicatorCornerRadius="12dp"
        app:stl_indicatorGravity="center"
        app:stl_indicatorInterpolation="linear"
        app:stl_indicatorThickness="32dp"
        app:stl_underlineThickness="0dp"
        android:layout_centerHorizontal="true"
        app:stl_defaultTabTextSize="14sp"
        />
    <android.support.v4.view.ViewPager
        android:layout_below="@id/xunjain_tab"
        android:id="@+id/xunjian_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
</RelativeLayout>
