<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@drawable/comm_selector_bg"
    android:paddingBottom="16dp"
    android:clickable="true"
    >
    <LinearLayout
        android:layout_marginTop="18dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_marginLeft="10dp"
            android:background="@drawable/ordernumber_bg"
            android:id="@+id/dynamic_item_author"
            android:textSize="14sp"
            android:textColor="#fff"
            android:text="21215"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dynamic_item_title"
            android:textSize="16sp"
            android:textColor="#000"
            android:text="工单标题"
            android:paddingLeft="16dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="invisible"
            android:id="@+id/dynamic_item_status"
            android:textSize="10sp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="已关闭"
            android:textColor="@color/colorWhite"
            android:background="@drawable/green_round_rect_shape"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center_vertical"
        >
        <TextView
            android:visibility="gone"
            android:id="@+id/dynamic_item_auth"
            android:textSize="12sp"
            android:textColor="#000"
            android:text="发起人"
            android:singleLine="true"
            android:ellipsize="middle"
            android:paddingLeft="8dp"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dynamic_item_msg"
            android:maxLines="1"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:textColor="#000"
            android:textSize="12sp"
            android:text="最新回复内容"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dynamic_item_time"
            android:textSize="10sp"
            android:textColor="#000"
            android:text="2016-04-20 12:00"
            android:paddingLeft="8dp"
           android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>