<?xml version="1.0" encoding="utf-8"?>
<com.y.w.ywker.views.SlidingButtonView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#EEEEEE"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/tv_delete"
            android:layout_height="match_parent"
            android:layout_width="80dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/layout_content"
            android:text="删 除"
            android:textSize="16sp"
            android:background="@drawable/btn_click_red_havebackground"
            android:textColor="#DDFFFFFF"
            />
        <LinearLayout
            android:id="@+id/layout_content"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/text"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                 android:layout_weight="2"
                android:textSize="16sp"
                android:text="条目信息"
                android:textColor="#DD000000"
                android:background="@drawable/btn_click_black_havebackground"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:id="@+id/code"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:text="编码"
                android:textColor="#DD000000"
                android:background="@drawable/btn_click_black_havebackground"
                />
           <!-- <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nexta"
                android:layout_gravity="center_vertical"
                />-->
        </LinearLayout>

    </RelativeLayout>
</com.y.w.ywker.views.SlidingButtonView>
