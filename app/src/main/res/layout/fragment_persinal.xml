<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_comm_gray"
    >

    <LinearLayout
        android:id="@+id/personial_item_notify_layout"
        android:gravity="center_vertical"
        style="@style/comm_new_order_comm_layout_style"
        >

        <ImageView
            android:src="@drawable/my_news"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_marginLeft="16dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="14sp"
            android:text="通知"
            android:textColor="#000"
            android:layout_height="wrap_content" />
        <TextView
            android:text="0"
            android:background="@drawable/red_round_rect_shape"
            android:id="@+id/personial_item_num"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/personial_item_user_layout"
        android:gravity="center_vertical"
        style="@style/comm_new_order_comm_layout_style"
        >

        <ImageView
            android:src="@drawable/my_my"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="16dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="14sp"
            android:text="联系人"
            android:textColor="#000"
            android:layout_height="wrap_content" />
        <ImageView
            style="@style/comm_arrow_right_img_style"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/personial_item_userinfo_layout"
        android:gravity="center_vertical"
        style="@style/comm_new_order_comm_layout_style"
        >

        <ImageView
            android:src="@drawable/my_my"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="16dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="14sp"
            android:text="个人信息"
            android:textColor="#000"
            android:layout_height="wrap_content" />
        <ImageView
            style="@style/comm_arrow_right_img_style"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/personial_item_feedback_layout"
        android:gravity="center_vertical"
        style="@style/comm_new_order_comm_layout_style"
        >

        <ImageView
            android:src="@drawable/my_problem"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="16dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="14sp"
            android:text="反馈问题"
            android:textColor="#000"
            android:layout_height="wrap_content" />
        <ImageView
            style="@style/comm_arrow_right_img_style"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/personial_item_about_layout"
        android:gravity="center_vertical"
        style="@style/comm_new_order_comm_layout_style"
    >

    <ImageView
        android:src="@drawable/my_about"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="16dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textSize="14sp"
        android:text="关于"
        android:textColor="#000"
        android:layout_height="wrap_content" />
    <ImageView
        style="@style/comm_arrow_right_img_style"
        />
</LinearLayout>

    <LinearLayout
        android:id="@+id/personial_item_setting_layout"
        android:gravity="center_vertical"
        style="@style/comm_new_order_comm_layout_style"
        >

        <ImageView
            android:src="@drawable/my_set"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="16dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="14sp"
            android:text="设置"
            android:textColor="#000"
            android:layout_height="wrap_content" />
        <ImageView
            style="@style/comm_arrow_right_img_style"
            />
    </LinearLayout>
</LinearLayout>

